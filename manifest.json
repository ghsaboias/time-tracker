{
    "manifest_version": 3,
    "name": "ADHD Time Tracker",
    "version": "1.1",
    "description": "Tracks time spent on websites for ADHD management",
    "permissions": [
      "tabs",
      "storage",
      "activeTab",
      "alarms",
      "downloads",
      "scripting"
    ],
    "host_permissions": [
      "<all_urls>"
    ],
    "background": {
      "service_worker": "background.js"
    },
    "action": {
      "default_popup": "popup.html"
    },
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["content.js"],
        "run_at": "document_idle"
      }
    ]
  }